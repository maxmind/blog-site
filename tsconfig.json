{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019"
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "include": [
    "./assets/js/**/*",
    "./bin/**/*.ts",
    "./static/**/*.ts"
  ]
}
