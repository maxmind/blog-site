[
  {{- $.Scratch.Set "counter" 0 -}}
  {{- range .Site.RegularPages -}}
    {{- if .Params.isFeatured -}}
      {{ $.Scratch.Set "counter" (add ($.Scratch.Get "counter") 1) }}
      {
        "date": "{{ .Params.Date }}",
        "excerpt:" {{ .Summary }},
        "featured_image_src": "{{ .Site.BaseURL | replaceRE "/$" ""}}{{ .Params.featuredImage }}",
        "link": "{{ .Permalink }}",
        "title": "{{ .Params.Title }}",
      }
    {{- if lt ($.Scratch.Get "counter") 3 -}}, {{- end -}}
    {{- end -}}
  {{- end -}}
]
