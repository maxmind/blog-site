{
  "author": "MaxMind",
  "bugs": {
    "url": "https://github.com/maxmind/blog-site/issues"
  },
  "description": "MaxMind Blog",
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^10.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-lint-first-heading-level": "^3.1.1",
    "remark-lint-no-empty-url": "^3.1.1",
    "remark-lint-rule-style": "^3.1.1",
    "remark-lint-unordered-list-marker-style": "^3.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-preset-lint-recommended": "^6.1.2",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "lint-staged": {
    "**/*.json": [
      "npm run fix:json"
    ],
    "./content/**/**/*.md": [
      "npm run fix:content"
    ],
    "./assets/js/*.{js,ts}": [
      "npm run fix:scripts"
    ],
    "./assets/scss/*.[s]css": [
      "npm run fix:styles"
    ]
  },
  "name": "blog-site",
  "scripts": {
    "fix": "run-p fix:*",
    "fix:content": "npm run lint:content --fix",
    "fix:json": "npm run lint:json --fix",
    "fix:scripts": "npm run lint:scripts --fix",
    "fix:styles": "npm run lint:styles --fix",
    "lint": "run-p lint:*",
    "lint:configs": "eslint .*rc.js --no-ignore",
    "lint:content": "remark . --ext md --quiet",
    "lint:json": "eslint . --ext json",
    "lint:scripts": "tsc && eslint . --ext js,ts",
    "lint:styles": "stylelint ./assets/scss/*.{css,scss,sass}"
  },
  "version": "0.1.0"
}
